<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:scrollbars="vertical">

    <!-- Guess the Number Game -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the number!"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter number"
        android:inputType="number" />

    <Button
        android:id="@+id/btnGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Score: 0"
        android:textSize="18sp" />

    <!-- To-Do List -->
    <EditText
        android:id="@+id/edtTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Todo Item" />

    <Button
        android:id="@+id/btnAddTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add To-Do" />

    <TextView
        android:id="@+id/tvTodoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your To-Do List"
        android:textSize="18sp" />

    <!-- Daily Motivation -->
    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Motivation"
        android:textSize="18sp" />

    <!-- Dark Mode Toggle -->
    <Switch
        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Mode" />

    <!-- Language Preference -->
    <Button
        android:id="@+id/btnLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Language" />
</LinearLayout>
